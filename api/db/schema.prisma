datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id           String         @id @default(cuid())
  GenresOnUser GenresOnUser[]
}

model Genre {
  id   Int    @id @default(autoincrement())
  name String

}

model GenresOnUser {
  id      Int @id @default(autoincrement())
  genreId Int

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@unique([genreId, userId])
}

model Book {
  id            Int    @id @default(autoincrement())
  description   String
  title         String
  author        String
  genre         String
  coverImageUrl String
  amazonUrl     String
  Isbn          Isbn[]
}

model Isbn {
  id     Int    @id @default(autoincrement())
  book   Book   @relation(fields: [bookId], references: [id])
  bookId Int
  isbn10 String
  isbn13 String
}
